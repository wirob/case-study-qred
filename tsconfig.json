{
  "compilerOptions": {
    "rootDirs": ["src"],
    "baseUrl": "./src",
    "outDir": "build",
    "lib": ["ESNext"],
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
